<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/detailPoster"
        android:layout_width="180dp"
        android:layout_height="280dp"
        android:padding="10dp" />

    <LinearLayout
        android:id="@+id/layoutDetil"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/detailPoster"
        android:layout_toEndOf="@id/detailPoster"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/detailJudul"
            android:textColor="@color/tulisanPrimary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/tahun_rilis"
            android:textColor="@color/tulisanSecondary"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/detailRilis"
            android:textColor="@color/tulisanPrimary"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/genre"
            android:textColor="@color/tulisanSecondary"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/detailGenre"
            android:textColor="@color/tulisanPrimary"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/durasi"
            android:textColor="@color/tulisanSecondary"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/detailDurasi"
            android:textColor="@color/tulisanPrimary"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/sutradara"
            android:textColor="@color/tulisanSecondary"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/detailSutradara"
            android:textColor="@color/tulisanPrimary"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/golongan"
            android:textColor="@color/tulisanSecondary"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/detailGolongan"
            android:textColor="@color/tulisanPrimary"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

<LinearLayout
    android:id="@+id/layoutdetil2"
    android:layout_below="@id/layoutDetil"
    android:orientation="vertical"
    android:layout_marginTop="20sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="@string/rating"
        android:textSize="14sp"
        android:textColor="@color/tulisanSecondary"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/detailRating"
        android:gravity="center"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/tulisanPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="@string/sinopsis"
        android:textSize="14sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/tulisanSecondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>

    <ScrollView
        android:layout_below="@id/layoutdetil2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/detailSinopsis"
        android:textSize="18sp"
        android:padding="20dp"
        android:textColor="@color/tulisanPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </ScrollView>

</RelativeLayout>